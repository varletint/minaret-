<icecast>
    <!-- 
      Minaret Radio - Local Development Configuration
      
      This configuration provides:
      1. Dynamic Authentication (via API /source-auth)
      2. Event Webhooks (via API events)
      3. CORS support for web players
    -->

    <location>Earth</location>
    <admin>icemaster@localhost</admin>
    <hostname>localhost</hostname>

    <limits>
        <clients>100</clients>
        <sources>10</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-size>65535</burst-size>
    </limits>

    <!--  -->
    <authentication type="url">
        <source-user>source</source-user>
        <source-password>hackme</source-password>
        
        <admin-user>admin</admin-user>
        <admin-password>hackme</admin-password>
         <!-- <role type="url" allow-method="*"> -->
        <option name="stream_auth" value="http://127.0.0.1:3000/api/v1/icecast/source-auth"/>
        
            <option name="mount_add" value="http://127.0.0.1:3000/api/v1/icecast/mount-add"/>
            <option name="mount_remove" value="http://127.0.0.1:3000/api/v1/icecast/mount-remove"/>
            <!-- <option name="header_auth" value="Icecast-Auth"/>
            <option name="header_timelimit" value="Icecast-Timelimit"/> -->
           <option name="header_auth" value="Icecast-auth"/>
            <option name="header_timelimit" value="Icecast-timelimit"/>
        <!-- </role> -->
    </authentication> 
    <!-- --> 

    <listen-socket>
        <port>8000</port>
    </listen-socket>

    <http-headers>
        <header type="cors" name="Access-Control-Allow-Origin" />
        <header type="cors" name="Access-Control-Allow-Headers" />
        <header type="cors" name="Access-Control-Expose-Headers" />
    </http-headers>

    <!-- DEFAULT MOUNT CONFIGURATION -->
   <!-- DEFAULT MOUNT CONFIGURATION -->
<mount type="default">
    <authentication>
        <role type="url" allow-method="*">
        <option name="stream_auth" value="http://127.0.0.1:3000/api/v1/icecast/source-auth"/>
        
            <option name="mount_add" value="http://127.0.0.1:3000/api/v1/icecast/mount-add"/>
            <option name="mount_remove" value="http://127.0.0.1:3000/api/v1/icecast/mount-remove"/>
            <!-- <option name="header_auth" value="Icecast-Auth"/>
            <option name="header_timelimit" value="Icecast-Timelimit"/> -->
           <option name="header_auth" value="Icecast-auth"/>
            <option name="header_timelimit" value="Icecast-timelimit"/>
        </role>
    </authentication>
</mount>

