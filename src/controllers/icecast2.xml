<icecast>
    <!-- 
      Minaret Radio - Local Development Configuration
      Icecast 2.5.0 + Node API auth
    -->

    <!-- Server Info -->
    <location>Earth</location>
    <admin>icemaster@localhost</admin>
    <hostname>localhost</hostname>

    <!-- Limits -->
    <limits>
        <clients>100</clients>
        <sources>10</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-size>65535</burst-size>
    </limits>

    <!-- Admin Login -->
    <authentication>
        <admin-user>admin</admin-user>
        <admin-password>hackme</admin-password>
    </authentication>

    <!-- Listen Socket -->
    <listen-socket>
        <port>8000</port>
    </listen-socket>

    <!-- HTTP Headers for CORS -->
    <http-headers>
        <header type="cors" name="Access-Control-Allow-Origin" />
        <header type="cors" name="Access-Control-Allow-Headers" />
        <header type="cors" name="Access-Control-Expose-Headers" />
    </http-headers>

    <!-- Default Mount Configuration -->
    <mount type="default">
        <!-- Source Role: Broadcasters -->
        <authentication>
            <role type="url"
                  match-method="source,put"
                  allow-web="*"
                  deny-admin="*"
                  may-alter="send_error,redirect">
                <option name="client_add" value="http://localhost:3000/api/v1/icecast/source-auth"/>
                <option name="header_prefix" value="IcecastHeader."/>
            </role>

            <!-- Listener Role: Web players -->
            <role type="url"
                  match-method="get,post,head,options"
                  allow-web="*"
                  deny-admin="*"
                  may-alter="send_error,redirect">
                <option name="client_add" value="http://localhost:3000/api/v1/icecast/listener-auth"/>
                <option name="header_prefix" value="IcecastHeader."/>
            </role>

            <role type="anonymous" deny-all="*" />
        </authentication>

        <!-- Event Bindings -->
        <event-bindings>
            <event type="url" trigger="source-connect">
                <option name="url" value="http://localhost:3000/api/v1/icecast/mount-add"/>
            </event>
            
            <event type="url" trigger="source-disconnect">
                <option name="url" value="http://localhost:3000/api/v1/icecast/mount-remove"/>
            </event>

            <event type="url" trigger="listener-connect">
                <option name="url" value="http://localhost:3000/api/v1/icecast/listener-add"/>
            </event>

            <event type="url" trigger="listener-disconnect">
                <option name="url" value="http://localhost:3000/api/v1/icecast/listener-remove"/>
            </event>
        </event-bindings>
    </mount>

    <!-- Paths -->
    <paths>
        <logdir>C:/IcecastLogs</logdir>
        <webroot>./web</webroot>
        <adminroot>./admin</adminroot>
        <alias source="/" destination="/status.xsl"/>
    </paths>

    <!-- Logging -->
    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <loglevel>information</loglevel>
        <logsize>10000</logsize>
    </logging>

    <!-- Security -->
    <security>
        <chroot>0</chroot>
        <prng-seed type="read-write" size="1024">C:/Icecast/icecast.prng-seed</prng-seed>
    </security>
</icecast>
